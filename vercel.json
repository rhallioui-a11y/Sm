{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/public/(.*)$",
      "dest": "/public/$1",
      "methods": ["GET"]
    },
    {
      "src": "^/(.*\\.(js|css|json|png|jpg|jpeg|gif|svg|ico|webp))$",
      "dest": "/public/$1",
      "methods": ["GET"]
    },
    {
      "src": "/",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.js": {
      "memory": 512,
      "maxDuration": 30
    }
  }
}
